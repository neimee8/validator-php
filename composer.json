{
    "name": "neimee8/validator-php",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Neimee8\\ValidatorPhp\\": "Src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Neimee8\\ValidatorPhp\\Tests\\": "Tests/"
        }
    },
    "authors": [
        {
            "name": "neimee8"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "test": "phpunit",
        "coverage": "phpunit --coverage-html coverage/ --coverage-filter src/"
    }
}
